<div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="staticBackdropLabel" aria-hidden="true" aria-labelledby="exampleModalToggleLabel">
  <div class="modal-dialog modal-lg modal-dialog-centered modal-dialog-scrollable">
    <div class="modal-content">
      <div class="modal-body p-0">
        <div class="row">
          <div class="col-lg-7 col-md-12 col-sm-12 overflow-hidden d-none d-lg-block p-0">
            <%= image_tag "https://wallpaperaccess.com/full/6592980.jpg", style: 'max-width:100%; max-height: 100%; object-fit: contain;'%>
          </div>
          <div class="col-lg-5 col-md-12 col-sm-12 mb-3 px-5">
            <div class="d-flex justify-content-end py-4">
              <button type="button" class="btn-close" data-bs-dismiss="modal"  aria-label="Close"></button>
            </div>
            <div>
              <%# <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button> %>
              <h2 class="mb-4">Join us!</h2>

              <%= simple_form_for(resource, as: :user, url: registration_path(:user),
                data: {turbo: false}) do |f| %>
                <%= f.error_notification %>

                <div class="form-floating mb-3">
                  <%= f.input_field :first_name, class: 'form-control',required: true, placeholder: "Input your first name" %>
                  <%= f.label :first_name, 'First name' %>
                  <%= f.full_error :first_name %>
                </div>

                <div class="form-floating mb-3">
                  <%= f.input_field :last_name, class: 'form-control',required: true, placeholder: "Input your last name" %>
                  <%= f.label :last_name, 'Last name' %>
                  <%= f.full_error :last_name %>
                </div>

                <div class="form-floating mb-3">
                  <%= f.input_field :email, class: 'form-control',required: true, placeholder: "Input your last name" %>
                  <%= f.label :email, 'Email' %>
                  <%= f.full_error :email %>
                </div>

                <div class="form-floating mb-3">
                  <%= f.input_field :password, class: 'form-control',required: true, placeholder: "Input your new password" %>
                  <%= f.label :password, 'Password' %>
                  <%= f.full_error :password %>
                  <div class="form-text">6 or more characters</div>
                </div>

                <div class="form-floating mb-3">
                  <%= f.input_field :password_confirmation, class: 'form-control',required: true, placeholder: "Input your new password" %>
                  <%= f.label :password_confirmation, 'Confirm password' %>
                  <%= f.full_error :password_confirmation %>
                  <div class="form-text">Retype your password</div>
                </div>
                <div class="form-actions form-btn my-4">
                  <%= f.submit "Sign up", class:"save-btn mx-0", style:"width:100%;" %>
                </div>
              <% end %>
              <div class="d-flex justify-content-center card-info-light align-items-center">
                <p class="pe-1 text-small">Already a member?</p>
                <a href="" data-bs-target="#exampleModalToggle2" data-bs-toggle="modal" data-bs-dismiss="modal" class="sign-up-link-small">Sign in here</a>
              </div>
            </div>
          </div>

        </div>
      </div>
      <%# <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
        <button type="button" class="btn btn-primary">Understood</button>
      </div> %>

    </div>
  </div>
</div>


