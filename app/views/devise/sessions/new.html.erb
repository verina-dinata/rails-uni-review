<div class="container mt-3">
  <div class="row justify-content-center">
    <div class="col-lg-8 col-md-6 col-sm-12">
      <h2 style="margin-top:10%">Log in</h2>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),
        data: {turbo: false}) do |f| %>
        <div class="form-inputs">
          <%= f.error_notification %>

          <div class="form-floating mb-3">
            <%= f.input_field :email, class: 'form-control',required: true, placeholder: "Input your email" %>
            <%= f.label :email, 'Email' %>
            <%= f.full_error :email %>
          </div>
          <div class="form-floating mb-3">
            <%= f.input_field :password, class: 'form-control',required: true, placeholder: "Input your password" %>
            <%= f.label :password, 'Password' %>
            <%= f.full_error :password %>
          </div>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions form-btn my-4">
          <%= f.button :submit, "Log in" %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>
